FIND_PATH(CURL_INCLUDE_DIR curl.h /home/linux/anaconda3/include)
FIND_PATH(CURL_LIBRARY NAMES curl PATH /home/linux/anaconda3/lib)
IF (CURL_INCLUDE_DIR AND CURL_LIBRARY)
	SET(CURL_FOUND TRUE)
ENDIF (CURL_INCLUDE_DIR AND CURL_LIBRARY)
IF (curl_FOUND)
	IF (NOT CURL_FIND_QUIETLY)
		MESSAGE(STATUS "Found CURL: ${CURL_LIBRARY}")
	ENDIF (NOT CURL_FIND_QUIETLY)
ELSE (CURL_FOUND)
	IF (CURL_FIND_REQUIRED)
		MESSAGE(FATAL_ERROR "Could not find CURL library")
	ENDIF (CURL_FIND_REQUIRED)
ENDIF (CURL_FOUND)
